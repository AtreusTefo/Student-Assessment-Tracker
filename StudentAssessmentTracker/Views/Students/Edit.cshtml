@using StudentAssessmentTracker.Models
@model StudentAssessmentTracker.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Student</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <img src="~/images/logo.png" alt="Logo" style="width:100px; margin-bottom:20px;" />
    <h2>Edit Student</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="StudentId" />

        <div>
            <label asp-for="FirstName"></label><br />
            <input asp-for="FirstName" />
        </div>

        <div>
            <label asp-for="LastName"></label><br />
            <input asp-for="LastName" />
        </div>

        <div>
            <label asp-for="Assessment1"></label><br />
            <input asp-for="Assessment1" type="number" min="0" max="100" />
        </div>

        <div>
            <label asp-for="Assessment2"></label><br />
            <input asp-for="Assessment2" type="number" min="0" max="100" />
        </div>

        <div>
            <label asp-for="Assessment3"></label><br />
            <input asp-for="Assessment3" type="number" min="0" max="100" />
        </div>

        <div style="margin-top:15px;">
            <button type="submit">Save</button>
            <a asp-action="Index" style="margin-left:10px;">Cancel</a>
        </div>
    </form>
</body>
</html>
