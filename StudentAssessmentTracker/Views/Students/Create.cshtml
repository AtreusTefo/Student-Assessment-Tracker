@model StudentAssessmentTracker.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Add Student</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName" />
    </div>
    <div>
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName" />
    </div>
    <div>
        <label asp-for="Assessment1"></label><br />
        <input asp-for="Assessment1" type="number" min="0" max="100" />
    </div>
    <div>
        <label asp-for="Assessment2"></label><br />
        <input asp-for="Assessment2" type="number" min="0" max="100" />
    </div>
    <div>
        <label asp-for="Assessment3"></label><br />
        <input asp-for="Assessment3" type="number" min="0" max="100" />
    </div>
    <div style="margin-top:10px;">
        <button type="submit">Save</button>
        <a asp-action="Index" style="margin-left:10px;">Cancel</a>
    </div>
</form>
